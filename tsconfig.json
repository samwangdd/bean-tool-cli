{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "declaration": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDir":"./src",
    "outDir":"./lib",
    "watch":true  
  },
  "include":[
    "./src"
  ],
  "exclude": ["node_modules", "es", "lib", "dist"]
}

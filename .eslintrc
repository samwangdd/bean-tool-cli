{
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "env": {
    "es6": true
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [["@", "./src"]]
      }
    }
  },
  "extends": "airbnb-base",
  "rules": {
    "no-console": "off",
    "array-element-newline": ["error", "consistent"],
    "indent": ["error", 4, { "MemberExpression": 0, "SwitchCase": 1 }],
    "quotes": ["error", "single", { "allowTemplateLiterals": true }],
    "linebreak-style": "off",
    "semi": ["error", "never"],
    "comma-dangle": "off",
    "import/no-unresolved": "off",
    "eol-last": "off"
  }
}
